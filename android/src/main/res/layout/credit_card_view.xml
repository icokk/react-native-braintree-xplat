<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:columnCount="2">

  <TextView
    android:text="@string/credit_card_number"
    android:id="@+id/textView"
    android:layout_row="0"
    android:layout_column="0"
    android:layout_columnSpan="2"
    android:layout_gravity="fill_horizontal" />

  <android.support.design.widget.TextInputLayout
    android:id="@+id/cardNumberLayout"
    android:layout_row="1"
    android:layout_column="0"
    android:layout_columnSpan="2"
    android:layout_gravity="fill_horizontal">

    <EditText
      android:inputType="number"
      android:id="@+id/cardNumber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/credit_card_number" />
  </android.support.design.widget.TextInputLayout>

  <TextView
    android:text="@string/cvv"
    android:id="@+id/textView2"
    android:layout_row="2"
    android:layout_column="0"
    android:layout_columnSpan="2"
    android:layout_gravity="fill_horizontal" />

  <android.support.design.widget.TextInputLayout
    android:id="@+id/cardCVVLayout"
    android:layout_row="3"
    android:layout_column="0"
    android:layout_columnSpan="2"
    android:layout_gravity="fill_horizontal">

    <EditText
      android:inputType="number"
      android:id="@+id/cardCVV"
      android:hint="@string/cvc_cvv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </android.support.design.widget.TextInputLayout>

  <TextView
    android:text="@string/expiration_date"
    android:id="@+id/textView5"
    android:layout_row="4"
    android:layout_column="0"
    android:layout_columnSpan="2"
    android:layout_gravity="fill_horizontal" />

  <android.support.design.widget.TextInputLayout
    android:id="@+id/expiryMonthLayout"
    android:layout_row="5"
    android:layout_column="0"
    android:layout_columnWeight="1"
    android:layout_gravity="fill_horizontal"
    tools:targetApi="lollipop">

    <EditText
      android:id="@+id/expiryMonth"
      android:inputType="number"
      android:hint="@string/month"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
    android:id="@+id/expiryYearLayout"
    android:layout_row="5"
    android:layout_column="1"
    android:layout_columnWeight="1"
    android:layout_gravity="fill_horizontal"
    tools:targetApi="lollipop">

    <EditText
      android:inputType="number"
      android:hint="@string/year"
      android:id="@+id/expiryYear"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </android.support.design.widget.TextInputLayout>

</GridLayout>
